<div class="container">
    <h1>Welcome, <%= current_user.first_name %></h1>
    
    <h4>Here are some events happening in your state:</h4>
    
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <td>Name</td>
                <td>Date</td>
                <td>Location</td>
                <td>Host</td>
                <td>Action/Status</td>
            </tr>
        </thead>
        <tbody>
            <% @in_state_events.each do |event| %>
            <% p event.users_joined.include?(current_user) %>
            <% p current_user %>
            <% p "$" * 20 %>
                <tr>
                    <td><a href="/events/<%= event.id %>"><%= event.name %></a></td>
                    <td><%= event.date %></td>
                    <td><%= event.city %></td>
                    <td><%= event.user.first_name %></td>
                    <td>
                        <% if current_user.id == event.user.id %>
                            <a href="">Edit</a> | <a href="">Delete</a>
                        <% elsif event.users_joined.include?(current_user) %>
                            <p style="display: inline;">Joining</p> | <a href="#">Cancel</a>
                        <% else %>
                            <a data-method="post" href="/attendees/<%= event.id %>">Join</a>
                        <% end %> 
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <h4>Here are some events happening in other states:</h4>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <td>Name</td>
                <td>Date</td>
                <td>Location</td>
                <td>Host</td>
                <td>Action/Status</td>
            </tr>
        </thead>
        <tbody>
            <% @out_state_events.each do |event| %>
